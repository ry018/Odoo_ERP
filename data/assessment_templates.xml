<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Technology Assessment Questions -->
        <record id="question_tech_1" model="dt.assessment.template">
            <field name="name">Current ERP System Effectiveness</field>
            <field name="category">technology</field>
            <field name="question_text">Our current ERP system effectively supports our business processes and provides real-time visibility into operations.</field>
            <field name="weight">2.0</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="question_tech_2" model="dt.assessment.template">
            <field name="name">Data Integration Capabilities</field>
            <field name="category">technology</field>
            <field name="question_text">Our systems are well-integrated and data flows seamlessly between different applications.</field>
            <field name="weight">2.0</field>
            <field name="sequence">20</field>
        </record>
        
        <record id="question_tech_3" model="dt.assessment.template">
            <field name="name">Cloud Infrastructure</field>
            <field name="category">technology</field>
            <field name="question_text">We have migrated most of our critical systems to cloud infrastructure for better scalability and reliability.</field>
            <field name="weight">2.0</field>
            <field name="sequence">30</field>
        </record>
        
        <!-- Process Assessment Questions -->
        <record id="question_proc_1" model="dt.assessment.template">
            <field name="name">Process Automation Level</field>
            <field name="category">process</field>
            <field name="question_text">Our key business processes are automated and require minimal manual intervention.</field>
            <field name="weight">2.0</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="question_proc_2" model="dt.assessment.template">
            <field name="name">Process Documentation</field>
            <field name="category">process</field>
            <field name="question_text">All our business processes are well-documented and regularly updated.</field>
            <field name="weight">2.0</field>
            <field name="sequence">20</field>
        </record>
        
        <!-- People & Skills Assessment Questions -->
        <record id="question_people_1" model="dt.assessment.template">
            <field name="name">Digital Skills Level</field>
            <field name="category">people</field>
            <field name="question_text">Our employees have the necessary digital skills to work effectively with modern technology systems.</field>
            <field name="weight">2.0</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="question_people_2" model="dt.assessment.template">
            <field name="name">Training and Development</field>
            <field name="category">people</field>
            <field name="question_text">We regularly invest in training and upskilling our employees on new technologies and digital tools.</field>
            <field name="weight">2.0</field>
            <field name="sequence">20</field>
        </record>
        
        <!-- Culture Assessment Questions -->
        <record id="question_culture_1" model="dt.assessment.template">
            <field name="name">Innovation Mindset</field>
            <field name="category">culture</field>
            <field name="question_text">Our organization actively encourages innovation and embraces new ways of working.</field>
            <field name="weight">2.0</field>
            <field name="sequence">10</field>
        </record>
        
        <record id="question_culture_2" model="dt.assessment.template">
            <field name="name">Change Readiness</field>
            <field name="category">culture</field>
            <field name="question_text">Our employees are generally receptive to change and new technology implementations.</field>
            <field name="weight">2.0</field>
            <field name="sequence">20</field>
        </record>
        
    </data>
</odoo>